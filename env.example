# Supabase (временно мок данные)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# App URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Telegram Bot
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# Telegram Bot Configuration
# Режим работы бота: "polling" или "webhook"
BOT_MODE=polling

# Webhook настройки (используется только если BOT_MODE=webhook)
# Публичный HTTPS URL для webhook (например: https://your-app.vercel.app/api/telegram/webhook)
BOT_WEBHOOK_URL=

# Автоматический перезапуск бота при ошибках
BOT_AUTO_RESTART=true

# Database (для будущего использования)
DATABASE_URL=postgresql://user:password@localhost:5432/pokertracker
DIRECT_URL=postgresql://user:password@localhost:5432/pokertracker
